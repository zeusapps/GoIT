<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eugen.task001.ResultActivity">

    <Button
        android:text="Olga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:id="@+id/result_one" />

    <Button
        android:text="Dmitry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_one"
        android:layout_alignRight="@+id/result_one"
        android:layout_alignEnd="@+id/result_one"
        android:layout_marginTop="35dp"
        android:id="@+id/result_two" />

    <Button
        android:text="Vasiliy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/result_two"
        android:layout_alignLeft="@+id/result_two"
        android:layout_alignStart="@+id/result_two"
        android:layout_marginTop="35dp"
        android:id="@+id/result_three" />


</RelativeLayout>
