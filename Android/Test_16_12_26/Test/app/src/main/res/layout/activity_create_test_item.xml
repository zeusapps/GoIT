<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_test_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eugen.test.activities.CreateTestItemActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_test_item_question"
        android:id="@+id/create_test_item_questionEditText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_test_item_correct_answer"
        android:id="@+id/create_test_item_correctAnswerEditText"
        android:layout_below="@id/create_test_item_questionEditText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_test_item_wrong_answer"
        android:id="@+id/create_test_item_wrongAnswer1EditText"
        android:layout_below="@id/create_test_item_correctAnswerEditText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_test_item_wrong_answer"
        android:id="@+id/create_test_item_wrongAnswer2EditText"
        android:layout_below="@+id/create_test_item_wrongAnswer1EditText"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/create_test_item_wrong_answer"
        android:id="@+id/create_test_item_wrongAnswer3EditText"
        android:layout_below="@+id/create_test_item_wrongAnswer2EditText"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_test_item_add_question"
        android:id="@+id/create_test_item_createButton"
        android:layout_below="@+id/create_test_item_wrongAnswer3EditText"/>

</RelativeLayout>
